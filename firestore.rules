rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    match /sales/{saleId} {
      allow read, write;
    }
    match /backups/{backupsId} {
      allow read, write;
    }
    match /Units/{unitId} {
      allow read, write;
      match /sales/{saleId} {
        allow read, write;
      }
    }
    match /Branches/{branchId} {
      allow read, write;
    }
  }
}